# Application settings
APP_NAME=Terrarium API
DEBUG=True

# Database configuration
DATABASE_URL=sqlite:///./terrarium.db

# JWT settings
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Key for ingestion endpoints
API_KEY=your-api-key-change-in-production

# Initial admin user (set in environment)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=demo1234

# Rate limiting
INGESTION_RATE_LIMIT_SECONDS=10
USER_RATE_LIMIT_PER_MINUTE=100

# Module heartbeat
HEARTBEAT_TIMEOUT_SECONDS=120
HEARTBEAT_CHECK_INTERVAL_SECONDS=60

# Alert throttling
ALERT_THROTTLE_HOURS=1

# History
MAX_HISTORY_POINTS=500

# Threshold ranges
SOIL_MOIST_MIN=0
SOIL_MOIST_MAX=100
HUMIDITY_MIN=0
HUMIDITY_MAX=100
LIGHT_MIN=0
LIGHT_MAX=50000
TEMP_MIN=0
TEMP_MAX=50